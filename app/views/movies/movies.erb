<div>
    <h2>All Movies</h2>
</div>

<div>
    <a href="/movies/new"><button type="submit">Add Movie</button></a>
</div>

<div>
<% if @movies.length > 0 %>
    <table>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Genre</th>
            <th>Release Date</th>
        </tr>
        <% Movie.all.each do |movie| %>
            <tr>
                <td><a href="/movies/<%= movie.slug %>"><%= movie.title %></a></td>
                <td><%= movie.director %></td>
                <td><%= movie.genre %></td>
                <td><%= movie.release_date.strftime("%-m/%-d/%Y") %></td>
            </tr>
        <% end %>
    </table>
<% else %>
    <p>There aren't any movies in the database yet - check back later.</p>
<% end %>
</div>