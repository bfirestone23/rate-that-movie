<h2>Welcome, <%= @user.username %>!</h2>

<h3>Create a new review or select from an existing review to edit or delete.</h3>
<a href="/reviews/new"><button type="submit">New Review</button></a><br>

<h3>Your reviews:</h3>
<% if @user.reviews.length > 0 %>
    <table>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Link</th>
        </tr>
        <% @user.reviews.each do |review| %>
            <tr>
                <td><%= review.movie.title %></td>
                <td><%= review.movie.genre %></td>
                <td><%= review.rating %></td>
                <td><a href="/reviews/<%= review.id %>">View</a></td>
            </tr>
        <% end %>
    </table>
<% else %>
    <p>You haven't submitted any reviews yet!</p>
<% end %>

<h3>Select a user below to view their reviews.</h3>
<ul>
<% User.all.each do |u| %>
    <% if u != current_user %>
        <li><a href="/users/<%= u.slug %>"><%= u.username %></a></li>
    <% end %>
<% end %>
</ul>